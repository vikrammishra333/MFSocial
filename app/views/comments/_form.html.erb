<div>
  <%= form_for(@comment, :remote => true, :html => {:id => "comment_form_#{post_id}" }) do |f| %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :post_id, :value => "#{post_id}" %>
  <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
    <div class="field">
      <%= f.text_area :content, :class => "wall_post text_space", :rows => "1", :cols => "49", :placeholder => "what do you think about this status?", :onKeyPress => "checkSubmit(event, 'comment_form_#{post_id}', this)" %>
    </div>
  <%= 
  #f.submit  'Comment', :id => "submit"
  %>
  <% end %>
</div>

