<% @comments = @post.comments %>

<div class="comment-box-inner">
  <% unless @comments.nil? %>
  
  <div class="comment_post">

    <% @comments.each do |comment| %>
        <div class="post_comment post_comment_child comment_child">
          <div class="image_name">
            <%= link_to image_tag("profilePhoto/no-image.gif", :class => "profile_image", :alt => "User's image", :size => "50x50"), root_url, :id => "profile_image" %>
          </div>
          <div class="image_name">
            <div class="name_link_post comment_name_link">
              <div>
                <%= link_to "#{comment.user.first_name} #{comment.user.last_name} ", root_url %> has commented on this status.
              </div>
              <div>
                <%= comment.content %>
              </div>
              <div>
                <span><%= link_to "Like",likes_path("like_type" => "comment", :like => {:user_id => "#{current_user.id}", :post_id => "#{comment.post_id}", :comment_id => "#{comment.id}" }), :method => "post", :remote => true %></span>
                <span><%= link_to "Unlike", root_url, :remote => true %></span>
                <span><%= link_to "Comment", root_url, :remote => true %></span>
                <span><abbr class="timeago" title="<%= comment.timeago_format %>" style="border-style: none;"></abbr></span>
              </div>
              <div id="comment_like_<%= comment.id %>" class="">You like this</div>
            </div>

          </div>

        </div>
    <% end %>
  </div>
  <% end %>
  <div class="comment-box-photo">
    <%= link_to image_tag("profilePhoto/no-image.gif", :class => "profile_image", :alt => "User's image", :size => "35x35"), root_url, :id => "profile_image" %>
  </div>
  <div id="comment-box-form" class="comment-box-form" >
    <%= render :partial=>'comments/form', :locals => {:post_id => "#{@post.id}"} %>
  </div>
</div>
<div style="clear:both;"></div>