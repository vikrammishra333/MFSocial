
<div class="post_comment">
  <div class="post_comment_child">
    <div class="image_name">
      <%= link_to image_tag("profilePhoto/no-image.gif", :class => "profile_image", :alt => "User's image", :size => "50x50"), root_url, :id => "profile_image" %>
    </div>
    <div class="image_name">
      <div class="name_link_post">
        <div>
          <%= link_to "#{current_user.full_name}", root_url %> has updated his status.
        </div>
        <div>
          <%= post.content %>
        </div>
        <div>
          <span><%= link_to "Like", root_url, :remote => true %></span>
          <span><%= link_to "Comment", root_url, :remote => true %></span>
          <span><%= link_to "Share", root_url, :remote => true %></span>
          <span><abbr class="timeago" title="<%= post.timeago_format %>" style="border-style: none;"></abbr></span>
        </div>
        <div id="comments" class="comments">
          <div class="comment-uppertip" style=""> </div>
          <% @post = post %>
          <%= render :partial => 'home/comment_box', :post => @post %>
        </div>
      </div>

    </div>
    
  </div>
  
</div>



